<!DOCTYPE html>
<html>
<head>
  <% include ../includes/header.ejs %>
</head>
<!-- This is the solution for the templating side of TA02-->
<body>
  <% include ../includes/nav.ejs %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%= title %></h1>
  </div>
</div>
<div class="container">
  <div>
    <!--Form for adding the user-->
    <form action="ta02/addUser" method="POST">
      <label for="newUser">Add User</label>
      <br> 
      <input type="text" name="newUser">
      <button type="submit">Add User</button>
      <br>
    </form>
  </div>
  <div>
    <!--Form for Removing the user-->
    <form action="ta02/removeUser" method="POST">
      <label for="rmvUser">Username to remove</label><br>
      <input type="text" name="rmvUser">
      <button type="submit">Remove User</button>
  </form>
  </div>
  <div>
    <!--Form for Removing the user-->
    <h2>Users:</h2>
    <% for(user of users) { %>
      <p><%= user %></p>
    <% } %>
  </div>
</div>
</body>
</html>