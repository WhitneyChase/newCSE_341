<html>
<head>
  <% include ../includes/header.ejs %>
</head>
<!-- This is the solution for the templating side of TA02-->
<body>
  <% include ../includes/nav.ejs %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%= title %></h1>
  </div>
</div>
<div class="container">
  <!-- CHALLENGE 1 -->
  <div>
    <form action="ta05/changeStyle" method="POST">
      <!-- The idea is that each option points contains a value that selects a stylesheet to include in the header -->
      <label for='css_style'>Choose your theme</label>
      <select id="css_style" name="css_style">
        <option value='0'>
          Default (Blue)
        </option>
        <option value='1'>
          Style 1 (Green)
        </option>
        <option value='2'>
          Style 2 (Purple)
        </option>
        <option value='3'>
          Style 3 (Orange)
        </option>
      </select>
      <button type="submit">Change Style</button>
    </form>
  </div>
  <!-- CHALLENGE 2 -->
  <div>
    <form action="ta05/counterIncrement" method="POST">
      <input type="hidden" name="constant" value="1">
      <button class="btn btn-default" type="submit">+</button>
    </form>
    <form action="ta05/counterIncrement" method="POST">
      <input type="hidden" name="constant" value="-1">
      <button class="btn btn-default" type="submit">-</button>
    </form>
  </div>
  <!-- CHALLENGE 3 -->
  <div>
    <form action="ta05/destroy" method="POST">
      <input type="hidden" name="reset" value="true">
      <button class="btn btn-default" type="submit">Reset Session</button>
    </form>
  </div>
</div>
</div>


</body>
</html>
